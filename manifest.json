{
  "manifest_version": 3,
  "name": "BrainMark",
  "version": "1.0.0",
  "description": "Smart tab management with intent tracking and AI-powered organization",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "tabGroups",
    "contextMenus",
    "sidePanel",
    "notifications",
    "identity",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Open BrainMark"
  },
  "side_panel": {
    "default_path": "pages/sidepanel.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content-intent-capture.js", "scripts/content-extractor.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
